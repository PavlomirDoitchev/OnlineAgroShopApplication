@{
    ViewData["Title"] = "Home";
}

<!-- Hero Banner -->

<div class="position-relative text-white text-center mb-5"
     style="background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.65)),
             url('/images/farm-banner.jpg') center/cover no-repeat;
             height: 70vh; width: 100%; border-radius: 16px; box-shadow: 0 10px 25px rgba(0,0,0,0.4);">
    <div class="position-absolute top-50 start-50 translate-middle">
        <h1 class="display-1 fw-bold text-success text-uppercase agro-title mb-4">
            Welcome to <span class="text-light">Green Harvester</span>
        </h1>
        <p class="lead text-light fw-semibold fs-3 fst-italic agro-subtitle">
            Your trusted source for seeds & plant protection.
        </p>
        <div class="mt-4">
            <a asp-controller="Products" asp-action="Index"
               class="btn btn-outline-light fw-bold rounded-pill px-5 py-3 shadow-lg fs-5 agro-cta-button">
                <i class="bi bi-basket me-1"></i> Browse Products
            </a>
        </div>
        <!-- Scroll Button -->
        <a href="#popular-section"
           class="btn btn-outline-success rounded-pill px-4 py-3 fs-6 fw-semibold agro-scroll-button" style="gap: 1.25rem;">
            <i class="bi bi-chevron-double-down me-1"></i> View this month’s popular
        </a>
    </div>
</div>


<div id="agroCarousel" class="carousel slide mb-5 shadow" data-bs-ride="carousel">
    <div class="carousel-inner rounded-4 overflow-hidden">
        <!-- Slide 1: Seeds -->
        <div class="carousel-item active position-relative">
            <img src="~/images/carousel-seeds.jpg" class="d-block w-100" alt="Seeds">
            <div class="carousel-caption d-none d-md-block agro-carousel-overlay">
                <h5 class="display-6 fw-bold text-white text-uppercase">Seeds</h5>
                <p class="fst-italic">Grow your garden with top-quality heirloom seeds.</p>
                <a asp-controller="Products" asp-action="Index" asp-route-category="Seeds"
                   class="btn btn-outline-light btn-sm rounded-pill px-4 py-2 mt-2">
                    Explore Seeds
                </a>
            </div>
        </div>

        <!-- Slide 2: Fertilizers -->
        <div class="carousel-item position-relative">
            <img src="~/images/fertilizer.jpg" class="d-block w-100" alt="Fertilizers">
            <div class="carousel-caption d-none d-md-block agro-carousel-overlay">
                <h5 class="display-6 fw-bold text-white text-uppercase">Fertilizers</h5>
                <p class="fst-italic">Boost plant health with eco-friendly nutrients.</p>
                <a asp-controller="Products" asp-action="Index" asp-route-category="Fertilizers"
                   class="btn btn-outline-light btn-sm rounded-pill px-4 py-2 mt-2">
                    Explore Fertilizers
                </a>
            </div>
        </div>

        <!-- Slide 3: Pesticides -->
        <div class="carousel-item position-relative">
            <img src="~/images/carousel-pesticide.jpg" class="d-block w-100" alt="Pesticides">
            <div class="carousel-caption d-none d-md-block agro-carousel-overlay">
                <h5 class="display-6 fw-bold text-white text-uppercase">Pesticides</h5>
                <p class="fst-italic">Shield crops with safe and effective solutions.</p>
                <a asp-controller="Products" asp-action="Index" asp-route-category="Pesticides"
                   class="btn btn-outline-light btn-sm rounded-pill px-4 py-2 mt-2">
                    Explore Pesticides
                </a>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#agroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#agroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<section id="popular-section" class="my-5 py-5 px-3 rounded-4" style="background: linear-gradient(...);">

    <section class="my-5 py-5 px-3 rounded-4" style="background: linear-gradient(to right, #2f3a2f, #3b4c3a);">
        <h2 class="text-center fw-bold mb-5 text-light display-6">
            <i class="bi bi-star-fill text-muted me-2"></i> Popular Picks <i class="bi bi-star-fill text-muted ms-2"></i>
        </h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-0 shadow agro-popular-card bg-body-tertiary h-100">
                    <div class="card-body text-center p-4">
                        <span class="badge bg-outline-success text-success mb-3 px-3 py-2 rounded-pill border border-success">Top Seller</span>
                        <h5 class="card-title fw-semibold text-dark fs-5"><i class="bi bi-flower1 me-2 text-success"></i>Heirloom Tomato Seeds</h5>
                        <p class="card-text text-muted">Organic seeds known for rich flavor and reliable growth.</p>
                        <small class="text-muted fst-italic">1,500+ sold this season</small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow agro-popular-card bg-body-tertiary h-100">
                    <div class="card-body text-center p-4">
                        <span class="badge bg-outline-warning text-warning mb-3 px-3 py-2 rounded-pill border border-warning">Farmer Favorite</span>
                        <h5 class="card-title fw-semibold text-dark fs-5"><i class="bi bi-bug me-2 text-warning"></i>Eco Insect Repellent</h5>
                        <p class="card-text text-muted">Protect plants naturally — no harsh chemicals involved.</p>
                        <small class="text-muted fst-italic">★★★★★ by 200+ farmers</small>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </section>


@section Scripts {
    <script>
        const carousel = document.getElementById('agroCarousel');
        if (carousel) {
            new bootstrap.Carousel(carousel, {
                interval: 4000,
                ride: 'carousel'
            });
        }
    </script>
}
