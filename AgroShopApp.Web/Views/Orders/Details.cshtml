@using AgroShopApp.Web.ViewModels.Order
@model OrderDetailsViewModel
@{
    ViewData["Title"] = "Order Details " + Model.Id;
}
<h2 class="text-white text-center my-4">Order Details</h2>

<div class="text-light mb-4">
    <p><strong>Order ID:</strong> @Model.Id</p>
    <p><strong>Date:</strong> @Model.OrderedOn.ToString("f")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-4">
    <h5 class="text-light">
        Total Paid: <span class="fw-bold">@Model.TotalAmount.ToString("C")</span>
    </h5>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-light rounded-pill">
        <i class="bi bi-arrow-left"></i> Back to Orders
    </a>
</div>
