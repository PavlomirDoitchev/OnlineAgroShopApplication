@{
    ViewData["Title"] = "Not Found";
}

@section Styles {
    <link rel="stylesheet" href="~/css/errors.css" />
}

<div class="agro-error-title">
    <div class="agro-error-code">404</div>
    <div class="error-message">Page Not Found</div>
    <div class="error-description">
        The page you are looking for doesn't exist or has been moved.<br />
        Please check the URL or return to the homepage.
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm rounded-pill px-4 py-2 mt-2">
        Return to Homepage
    </a>

</div>
